<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Sistema de Votación</title>
    <style>
        .tema-item {
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        .votos {
            font-weight: bold;
            color: #2196F3;
        }
    </style>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div id="temas-container">
        <% temas.forEach(function(tema) { %>
            <div class="tema-item" data-id="<%= tema.id %>">
                <h3><%= tema.tema %></h3>
                <a href="<%= tema.url %>" target="_blank">Ver enlace</a>
                <p>Votos: <span class="votos" id="votos-<%= tema.id %>"><%= tema.voto %></span></p>
                <button onclick="votar(<%= tema.id %>)">Votar</button>
            </div>
        <% }); %>
    </div>

    <script>
        const socket = io();

        async function votar(id) {
            try {
                const response = await fetch(`/temas/${id}/votar`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                if (!response.ok) {
                    throw new Error('Error al votar');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al procesar el voto');
            }
        }

        // Escuchar actualizaciones en tiempo real
        socket.on('actualizarVotos', (data) => {
            const votoSpan = document.getElementById(`votos-${data.id}`);
            if (votoSpan) {
                votoSpan.textContent = data.votos;
                reordenarTemas();
            }
        });

        // Función para reordenar los temas según los votos
        async function reordenarTemas() {
            const response = await fetch('/temas');
            const temas = await response.json();
            const container = document.getElementById('temas-container');
            
            // Limpiar el contenedor
            container.innerHTML = '';
            
            // Reconstruir la lista ordenada
            temas.forEach(tema => {
                container.innerHTML += `
                    <div class="tema-item" data-id="${tema.id}">
                        <h3>${tema.tema}</h3>
                        <a href="${tema.url}" target="_blank">Ver enlace</a>
                        <p>Votos: <span class="votos" id="votos-${tema.id}">${tema.voto}</span></p>
                        <button onclick="votar(${tema.id})">Votar</button>
                    </div>
                `;
            });
        }
    </script>
</body>
</html>